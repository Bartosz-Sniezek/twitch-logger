{
  "name": "twitch-logger",
  "version": "1.0.0",
  "description": "",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=24.12.0",
    "pnpm": ">=9.15.4",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:deps:up": "docker-compose -f ./.dev/docker-compose.yaml -p twitch_logger-infra up --build -d",
    "docker:deps:down": "docker-compose -f ./.dev/docker-compose.yaml -p twitch_logger-infra down",
    "docker:backend:build": "docker build -t twitch-logger-backend:latest -f apps/backend/Dockerfile .",
    "docker:backend:run": "docker run -p 8080:8080 --network twitch_logger-infra_backend_deps --env-file apps/backend/.env twitch-logger-backend:latest",
    "docker:backend:run:detached": "docker run -d -p 8080:8080 --env-file apps/backend/.env --network twitch_logger-infra_backend_deps --name twitch-logger-backend twitch-logger-backend:latest",
    "docker:backend:stop": "docker stop twitch-logger-backend && docker rm twitch-logger-backend",
    "docker:frontend:build": "docker build -t twitch-logger-frontend:latest -f apps/frontend/Dockerfile .",
    "docker:frontend:run": "docker run -p 3000:3000 --env-file apps/frontend/.env twitch-logger-frontend:latest",
    "docker:frontend:run:detached": "docker run -d -p 3000:3000 --env-file apps/frontend/.env --name twitch-logger-frontend twitch-logger-frontend:latest",
    "docker:frontend:stop": "docker stop twitch-logger-frontend && docker rm twitch-logger-frontend"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
